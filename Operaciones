package uda_prog_tp1;

import java.util.Scanner;

public class Operaciones {
    private int num1,num2;
    float resultado;
        Operaciones(){
            Scanner sc = new Scanner(System.in);
        do{
        System.out.print("Ingrese un numero:");
        num1=sc.nextInt();
        System.out.print("Ingrese un numero:");
        num2=sc.nextInt();
        }while(num2==0 || num1<num2);    
    }
    public int resta(){
        
         int resta = num1 - num2;
         return (resta >= 0) ? resta : -resta;
            
    }
     public int suma(){
         return num1 + num2;
            
    }

    public int multiplicacion() {
        return num1 *num2;
    }
    public float divicion(){
        return num1/num2;
    }
} 
